    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="CategoryFrameStyle" TargetType="Frame">
                <Setter Property="WidthRequest" 
                        Value="100"/>
                <Setter Property="HeightRequest"
                        Value="30"/>
                <Setter Property="HasShadow"
                        Value="false"/>
                <Setter Property="CornerRadius"
                        Value="15"/>
            </Style>
            <Style x:Key="BoxViewLine" TargetType="BoxView">
                <Setter Property="BackgroundColor"
                        Value="#e9e9e9"/>
                <Setter Property="HeightRequest"
                        Value="1"/>
                <Setter Property="WidthRequest"
                        Value="1"/>
            </Style>
            <Style x:Key="GoodsFrame" TargetType="Frame">
                <Setter Property="HasShadow"
                        Value="false"/>
                <Setter Property="CornerRadius"
                        Value="10"/>
                <Setter Property="IsClippedToBounds"
                        Value="true"/>
                <Setter Property="Padding"
                        Value="0"/>
            </Style>
            <Style x:Key="GoodImage" TargetType="Image">
                <Setter Property="HeightRequest"
                        Value="237"/>
                <Setter Property="WidthRequest"
                        Value="200"/>
                <Setter Property="HorizontalOptions"
                        Value="FillAndExpand"/>
                <Setter Property="VerticalOptions"
                        Value="FillAndExpand"/>
                <Setter Property="Aspect"
                        Value="AspectFill"/>
            </Style>
            <Style x:Key="LableCategoryStyle" TargetType="Label">
                <Setter Property="Font"
                        Value="13"/>
                <Setter Property="TextColor"
                        Value="White"/>
            </Style>
            <Style x:Key="LabelPriceOfGood" TargetType="Label">
                <Setter Property="TextColor"
                        Value="Gray"/>
                <Setter Property="Font"
                        Value="13"/>
            </Style>
            <Style x:Key="LabelDiscription" TargetType="Label">
                <Setter Property="Font"
                        Value="16"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
 <ContentPage.Content>
        <TableView HasUnevenRows="true"
                   >
            <TableRoot>
              <TableSection>
                    <ViewCell>
                    <StackLayout>
                    <Grid RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                <!--   name     -->
                        <Grid Grid.Row="0">
                           <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid Padding="15">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="45"/>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="153"/>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0">
                                                    <Label x:Name="nameInProfile"
                                                           TranslationY="10"
                                                           FontSize="Medium" 
                                                           FontAttributes="Bold"/>
                                                </Grid>
                                                
                                                <Grid Grid.Column="1">
                                                    <Image Source="pass.png" 
                                                           HeightRequest="40" 
                                                           WidthRequest="40"
                                                           VerticalOptions="Start" 
                                                           HorizontalOptions="StartAndExpand"/>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                        
                                        <Grid Grid.Row="2">
                                             <StackLayout HorizontalOptions="Start"
                                                         HeightRequest="25"
                                                         x:Name="raitingSystemStack"
                                                         Orientation="Horizontal">
                                                <Button Image="grayStar"
                                                        x:Name="firstStar"
                                                       WidthRequest="15"
                                                       HeightRequest="15"
                                                       VerticalOptions="CenterAndExpand"
                                                       HorizontalOptions="Start"
                                                       Margin="0, 0, 0, 0"/>
                                                <Button Image="grayStar"
                                                        x:Name="secondStar"
                                                       WidthRequest="15"
                                                       HeightRequest="15"
                                                       VerticalOptions="CenterAndExpand"
                                                       HorizontalOptions="Start"
                                                       Margin="0, 0, 0, 0"/>
                                                <Button Image="grayStar"
                                                        x:Name="thirdStar"
                                                       WidthRequest="15"
                                                       HeightRequest="15"
                                                       VerticalOptions="CenterAndExpand"
                                                       HorizontalOptions="Start"
                                                       Margin="0, 0, 0, 0"/>
                                                <Button Image="grayStar"
                                                        x:Name="forthStar"
                                                       WidthRequest="15"
                                                       HeightRequest="15"
                                                       VerticalOptions="CenterAndExpand"
                                                       HorizontalOptions="Start"
                                                       Margin="0, 0, 0, 0"/>
                                                <Button Image="grayStar"
                                                        x:Name="fifthStar"
                                                       WidthRequest="15"
                                                       HeightRequest="15"
                                                       VerticalOptions="CenterAndExpand"
                                                       HorizontalOptions="Start"
                                                       Margin="0, 0, 0, 0"/>
                                            </StackLayout>
                                        </Grid>
                                        
                                         <Grid Grid.Row="3">
                                            <StackLayout Orientation="Horizontal"
                                                         HorizontalOptions="FillAndExpand"
                                                         VerticalOptions="FillAndExpand">
                                                <Button Text="Написать"
                                                        TextColor="White"
                                                        BackgroundColor="#ef5e7a"
                                                        CornerRadius="20"
                                                        Font="15"
                                                        HorizontalOptions="FillAndExpand"
                                                        VerticalOptions="CenterAndExpand"/>
                                            </StackLayout>
                                        </Grid>
                                        
                                        <Grid Grid.Row="4">
                                        </Grid>
                                    </Grid>
                                </Grid>
                                
                                
                                <Grid Grid.Column="1">
                                    <local:MyImage x:Name="image1"
                                           HorizontalOptions="CenterAndExpand"
                                           VerticalOptions="CenterAndExpand"
                                           HeightRequest="120"
                                           WidthRequest="120"
                                                   Aspect="AspectFill"
                                           >
                                    </local:MyImage>
                                </Grid>
                            </Grid>
                        </Grid> 
                       

                <!--   photo     -->
                        
                    </Grid>
                    </StackLayout>
                        </ViewCell>
                </TableSection>
                
                
                
